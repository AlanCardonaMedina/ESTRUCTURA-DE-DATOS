index = 0
inde=0
x = 0

def create():
    cola = [0, 0, 0, 0, 0]
    index=0
    inde=0
    return cola, index, inde
    
var, index, inde=create()
print("------------------------------------")
print("cola =", var)
print("TamaÃ±o de la cola: ", len(var))
print("------------------------------------")

def push(var, x, index):
    
    if index == 0:        
        if var[index]!= 0:
            print("cola llena")
            return (var, x, index)
        else:
            var[index] = x;
            index+=1
            print("------------------------------------")
            print("Valor agregado:", var[len(var)-5])         
            return (var, x, index)
    
    elif index == 1:
        if var[index]!= 0:
            print("cola llena")
            return (var, x, index)         
        else:
            var[index] = x;
            index+=1
            print("------------------------------------")
            print("Valor agregado:", var[len(var)-4])
            return (var, x, index)
        
    elif index == 2:
        if var[index]!= 0:
            print("cola llena")
            return (var, x, index)
        else:
            var[index] = x;
            index+=1
            print("------------------------------------")
            print("Valor agregado:", var[len(var)-3])
            return (var, x, index)
    elif index == 3:
        if var[index]!= 0:
            print("cola llena")
            return (var, x, index)
        else:
            var[index] = x;
            index+=1
            print("------------------------------------")
            print("Valor agregado:", var[len(var)-2])
        return (var, x, index)
    elif index == 4:
        if var[index]!= 0:
            print("cola llena")
            return (var, x, index)
        else:
            var[index] = x;
            index-=4
            print("------------------------------------")
            print("Valor agregado:", var[len(var)-1])
            return (var, x, index)
def Menu(var, index, inde):
    z = True
    while z == True:
        print("Menu:")
        print("Seleccione una opcion:")
        print("1-.Encolar(push)")
        i = int(input())
        if (i == 1):
            print("Ingrese un valor a la cola:")
            x = input()
            var, x, index= push(var, x, index);
            print("Cola=", var)
            print("------------------------------------")
Menu(var, index, inde)            
        
        
