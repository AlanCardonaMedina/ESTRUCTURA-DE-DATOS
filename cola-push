index = 0
x = 0

def create():
    cola = [0, 0, 0, 0, 0]
    index=0
    return cola, index
    
var, index=create()
print("------------------------------------")
print("cola =", var)
print("Tama√±o de la cola: ", len(var))
print("------------------------------------")

def push(var, x, index):
    if index == 0:
        var[index] = x;
        index+=1
        print("------------------------------------")
        print("Valor agregado:", var[len(var)-5])
        return (var, x, index)
    
    elif index == 1:
        var[index] = x;
        index+=1
        print("------------------------------------")
        print("Valor agregado:", var[len(var)-4])
        return (var, x, index)
    elif index == 2:
        var[index] = x;
        index+=1
        print("------------------------------------")
        print("Valor agregado:", var[len(var)-3])
        return (var, x, index)
    elif index == 3:
        var[index] = x;
        index+=1
        print("------------------------------------")
        print("Valor agregado:", var[len(var)-2])
        return (var, x, index)
    elif index == 4:
        var[index] = x;
        index+=1
        print("------------------------------------")
        print("Valor agregado:", var[len(var)-1])
        return (var, x, index)
    else:
        print("La cola esta llena")
        return (var, x, index)
        
        
def Menu(var, index):
    z = True
    while z == True:
        print("Menu:")
        print("Seleccione una opcion:")
        print("1-.Encolar(push)")
        print("2-.Cerra programa")
        
        i = int(input())
        if (i == 1):
            print("Ingrese un valor a la cola:")
            x = input()
            var, x, index= push(var, x, index);
            print("Cola=", var)
            print("------------------------------------")

        if (i == 2):
            z = False

Menu(var, index)
